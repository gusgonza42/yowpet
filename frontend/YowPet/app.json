{
  "expo": {
    "name": "YowPet",
    "slug": "YowPet",
    "scheme": "yowpet",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/logos/yowpet_fondo.png",
    "userInterfaceStyle": "light",
    "description": "Aplicación para gestión y cuidado de mascotas",
    "primaryColor": "#4CAF50",
    "newArchEnabled": true,
    "splash": {
      "image": "./assets/logos/yowpet.png",
      "resizeMode": "contain",
      "backgroundColor": "#0E333C"
    },
    "runtimeVersion": {
      "policy": "sdkVersion"
    },
    "ios": {
      "supportsTablet": true,
      "icon": "./assets/logos/yowpet.png",
      "bundleIdentifier": "com.yowpet.app"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/logos/yowpet.png",
        "backgroundColor": "#FFFFFF"
      },
      "package": "com.yowpet.app"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/logos/icon.png",
      "name": "YowPet - Cuidado de Mascotas"
    },
    "plugins": [
      "expo-router",
      "expo-secure-store",
      "expo-file-system"
    ],
    "assetBundlePatterns": [
      "**/*"
    ],
    "experiments": {
      "tsconfigPaths": true
    },
    "updates": {
      "enabled": true,
      "checkAutomatically": "ON_LOAD"
    }
  }
}